<%- include("partials/header"); -%>
  <h1>Compose</h1>
  <form class="" action="/compose" method="post">
    <label for="postTitle">Title</label>
    <div class="form-group">
    <input class="form-control" type="text" name="postTitle">
    </div>
    <div class="form-group">
    <label for="postBody">Post Body</label>
    <textarea class="form-control" name="postBody" rows="8" cols="80"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="publishButton">Publish</button>
  </form>
<%- include("partials/footer"); -%>
